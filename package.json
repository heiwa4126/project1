{
	"name": "project1",
	"version": "0.0.0-alpha1",
	"description": "tsup test template",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.cjs",
			"import": "./dist/index.js"
		}
	},
	"bin": {
		"project1": "dist/main.js"
	},
	"scripts": {
		"init": "npm ci && npm run build && npm run link",
		"prepublishOnly": "npm run clean && npm run build && npm run test:run && npm run smoketest",
		"clean": "rm -rf dist",
		"build": "tsup",
		"link": "mkdir -p node_modules && ln -sfn ../ node_modules/project1",
		"test": "vitest run",
		"test:run": "vitest run",
		"test:watch": "vitest --watch",
		"lint": "biome lint .",
		"lint:full": "biome lint . --fix && tsc --noEmit && actionlint -verbose",
		"format": "biome format --write .",
		"format:full": "npm pkg fix && biome format --write . && dprint fmt && textlint --fix \"**/*.md\"",
		"main": "npx project1",
		"ex1": "node ./example/ex1.mjs && node ./example/ex1.cjs && tsx ./example/ex1.ts",
		"smoketest": "npm run ex1 && node dist/main.js",
		"security": "trivy fs --skip-dirs node_modules,cdk.out . && trivy config --skip-dirs node_modules,cdk.out .",
		"audit": "npm audit && trivy fs --scanners vuln package.json"
	},
	"keywords": [
		"hello-world",
		"example",
		"demo",
		"typescript",
		"esm",
		"commonjs",
		"cli",
		"tsup",
		"learning",
		"sigstore",
		"trusted-publishing",
		"github-actions"
	],
	"author": "heiwa4126 <heiwa4126@gmail.com>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/heiwa4126/project1.git"
	},
	"license": "MIT",
	"engines": {
		"node": ">=18"
	},
	"devDependencies": {
		"@types/node": "^24.9.1",
		"tsup": "^8.5.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	}
}
